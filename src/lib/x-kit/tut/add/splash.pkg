				water_pen
				{ shape =>  xd::NONCONVEX_SHAPE,
				  verts =>  pts'
				};

			    ro_pixmap
                                =
                                xc::make_ro_pixmap_from_rw_pixmap
				       pixmap;

			    xc::destroy_rw_pixmap  pixmap;

			    { origin => head pts',  data => ro_pixmap }: im::Image;
			};
		end;


