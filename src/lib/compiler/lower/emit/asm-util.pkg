package asm_formatting_utilities: (weak)  Asm_Formatting_Utilities {		# Asm_Formatting_Utilities	is from   src/lib/compiler/lower/emit/asm-util.pkg

    package c= cells_basis;							# cells_basis			is from   src/lib/compiler/lower/instruction/cells-basis.pkg

    fun reginfo (emit, an)
	= 
	case (lowcode_notes::print_cellinfo.get an)
	  
	     THE f =>   (fn c = emit (f c));
	     NULL  =>   (fn _ = ());
	esac;

    fun emit_cuts_to emit []
            =>
            ();

	emit_cuts_to emit labels
	    => 
	    emit ("\n\t/* cuts to:" + text + " */\n")
            where
	        text = list::fold_right

			   fn (l, "") =>  label::to_string l;
			      (l, s ) =>  label::to_string l + ", " + s;
			   end

			   ""

			   labels;
            end;
    end;
};
