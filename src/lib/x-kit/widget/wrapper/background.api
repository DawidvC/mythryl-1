## background.pkg
#
# NB: This widget is largely obsolete, as each
#     widget supports its own background now. XXX BUGGO FIXME
#
# Specify the default background color for the
# widgets in a subtree of the widget tree.
#
# This is the color used by the X clearArea and
# clearDrawable operations.
#
# All widgets in the widget subtree below the
# widget inherit this background color, unless
# or until overridden by another Background
# widget.

# Compiled by:
#     src/lib/x-kit/widget/xkit-widget.make6


# This api is implemented in:
#
#     src/lib/x-kit/widget/wrapper/background.pkg

stipulate
    package w  = widget;				# Widget		is from   src/lib/x-kit/widget/basic/widget.pkg
    package xc = xcore;					# xcore			is from   src/lib/x-kit/xclient/src/api/build.pkg
herein

    api Background {

	Background;

	background
	    :
	    (w::Root_Window, w::View, List(w::Arg))
	    ->
	    w::Widget
	    ->
	    Background;

	make_background
	    :
	    { color:   Null_Or( xc::Color ),			# New background color. Defaults to white if not specified.
	      widget:  w::Widget				# Affected widget-tree.
	    }
	    -> Background;

	as_widget:  Background -> w::Widget;
    };

end;



