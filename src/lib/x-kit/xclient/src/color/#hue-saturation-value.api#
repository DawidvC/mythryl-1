## color.api

# Compiled by:
#     src/lib/x-kit/xclient/xclient-internals.make6



# Specification of various color space utilities.



###               "The difference between papa and mama is,
###                that mama loves morals and papa loves cats."
###
###                                 -- Susy Clemens
###                                    (quoted in Mark Twain, a Biography)


stipulate
    package xt  = xtypes;				# xtypes	is fro
herein
    api Color {

	Hsv;		# hsv = "Hue, Saturation, Value"

	rgb_to_hsv:  xcore::Rgb -> Hsv;
	hsb_to_rgb:  Hsv -> xcore::Rgb;

	get_hsvvalues:  Hsv -> { hue:    Float,
				 sat:    Float,
				 value:  Float
			       };

    };
end;

