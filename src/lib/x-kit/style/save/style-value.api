## style-value.api


api STYLE_VALUE
=
api

    enum style_type
      = ST_Str
      | ST_Int
      | ST_Real
      | ST_Bool
      | ST_Font
      | ST_Color

    enum style_value
      = SV_Str of String
      | SV_Int of Int
      | SV_Real of real
      | SV_Bool of Bool
      | SV_Font of xcore::Font
      | SV_Color of xcore::color

    exception BadStyleValue

    my cvtStyleValue:  xcore::Screen -> (String * style_type) -> style_value
	/* convert a string to the specified kind of style value; this raises
	 * BadStyleValue if the string has the wrong format.
	 */

  end; #  STYLE_VALUE 


