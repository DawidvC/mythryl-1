generic package  cfg_peephole_g (

    package control_flow_graph:       Control_Flow_Graph;	# Control_Flow_Graph	is from   src/lib/compiler/lower/flowgraph/control-flow-graph.api
    package peep_hole:  Peephole;				# Peephole		is from   src/lib/compiler/lower/instruction/peephole.api
    sharing
        control_flow_graph::instruction_set == peep_hole::instruction_set;
)

: (weak) Control_Flow_Graph_Optimization			# Control_Flow_Graph_Optimization	is from   src/lib/compiler/lower/flowgraph/cfg-optimization.api

{
    package control_flow_graph = control_flow_graph;

    name = "Peephole optimization";

    fun run (cfg as graph::GRAPH graph)
        =
        {   fun opt (_, control_flow_graph::BLOCK { instructions, ... } )
                =
                instructions :=  peep_hole::peephole (reverse *instructions);
	 
	    graph.forall_nodes  opt;

	    cfg;
        };

};
