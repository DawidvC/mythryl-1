#!/bin/sh
#
# Install-time build script for bricks.make6.
#
# We will normally be run as a result of a toplevel "make rest".
#
# Our main result is the freezefile src/lib/x-kit/tut/bricks/bricks.make6.frozen.

bin/mythryld <<EOF
    make7::freeze "src/lib/x-kit/tut/bricks/bricks.make6";
EOF

if   [ -f "src/lib/x-kit/tut/bricks/bricks.make6.frozen" ]
then
     echo "   lib/x-kit/tut/bricks/build-bricks:   Successfully created: src/lib/x-kit/tut/bricks/bricks.make6.frozen"
     echo "   lib/x-kit/tut/bricks/build-bricks:   `ls -l src/lib/x-kit/tut/bricks/bricks.make6.frozen`"
else
     echo "   lib/x-kit/tut/bricks/build-bricks:   Failed to create src/lib/x-kit/tut/bricks/bricks.make6.frozen"
     exit 1
fi

exit 0;
