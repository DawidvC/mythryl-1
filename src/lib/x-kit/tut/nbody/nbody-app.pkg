	      (1.08e13, 0.0,  0.0, 3.51e6,  4.84e27,  4,      THE "green" ),
	      (1.50e13, 0.0,  0.0, 2.97e6,  5.98e27,  4,      THE "blue"  ),
	      (2.25e13, 0.0,  0.0, 2.43e6,  6.57e26,  3,      THE "red"   ),
	      (7.80e13, 0.0,  0.0, 1.30e6,  1.90e30,  6,      THE "brown" ) 

