stipulate
package t = Time
package tm = Timer
fun convert { usr, gc, sys } = {
	usr = t::to_string usr,
	gc = t::to_string gc,
	sys = t::to_string sys,
	tot = t::to_string (T.+(usr, T.+(sys, gc)))
      }
herein
fun make ()
    =
    {   t0 =   tm::start_cpu_timer ();

	make_compiler::make();
	convert (tm::check_cpu_timer t0);
    }
end;



