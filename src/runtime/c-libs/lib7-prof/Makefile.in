#
# the makefile for the profile support library
#

SHELL =		/bin/sh

INC_DIR =	../../include
CLIB_DIR =	../

INCLUDES =	-I$(INC_DIR) -I$(CLIB_DIR) -I../../o
GC_INCLUDES =	$(INCLUDES) -I../../gc

MAKE =		make
AR =		ar
ARFLAGS =	rcv
RANLIB =	ranlib

LIBRARY =	liblib7-prof.a

VERSION =	v-dummy

OBJS =		lib7-prof-lib.o \
		getpquantum.o \
		setpref.o \
		setptimer.o

$(LIBRARY)	: $(VERSION) $(OBJS)
	rm -rf $(LIBRARY)
	$(AR) $(ARFLAGS) $(LIBRARY) $(OBJS)
	$(RANLIB) $(LIBRARY)

$(VERSION) :
	echo "$(VERSION)" > $(VERSION)

.c.o:	$(INC_DIR)/runtime-unixdep.h $(INC_DIR)/runtime-base.h $(INC_DIR)/runtime-values.h \
	$(INC_DIR)/runtime-heap.h $(INC_DIR)/profile.h \
	$(CLIB_DIR)/lib7-c.h cfun-proto-list.h cfun-list.h
	$(CC) $(CFLAGS) $(DEFS) $(GC_INCLUDES) -c $<

clean :
	@rm -f v-* *.o $(LIBRARY)

