#!/bin/sh
#
# Install-time build script for threadkit.make6.
#
# We will normally be run as a result of a toplevel "make rest".
#
# Our main result is the freezefile src/lib/thread-kit/src/threadkit-internal.make6.a7.

bin/mythryld <<EOF
    make7::freeze "src/lib/thread-kit/src/threadkit.make6";
EOF

if   [ -f "src/lib/thread-kit/src/threadkit.make6.a7" ]
then
     echo "  src/lib/thread-kit/src/build-threadkit:   Successfully created src/lib/thread-kit/src/threadkit.make6.a7:"
     echo "  src/lib/thread-kit/src/build-threadkit:   `ls -l src/lib/thread-kit/src/threadkit.make6.a7`"
else
     echo "  src/lib/thread-kit/src/build-threadkit:   Failed to create src/lib/thread-kit/src/threadkit.make6.a7"
     exit 1
fi

exit 0;
