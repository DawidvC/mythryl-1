###
###                                -- Mark Twain in Eruption;



package exception_info_hook {

    my exception_name
        :
        primitive_types::Exception -> primitive_types::String
        =
	inline_t::cast (fn (primitive_types::REF s, _, _) = s);

    stipulate

	fun dummy (e: primitive_types::Exception)
            =
	    prestring::meld2
		(exception_name e,
		 " (more info unavailable: exception_info_hook not initialized)");

    herein
	exception_message_hook
            =
            primitive_types::REF dummy;

	fun exception_message e
            =
            (inline_t::deref) exception_message_hook e;
    end;
};
