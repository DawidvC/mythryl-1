			(   i + 1,

			    fold_left
				(fn (v, nm) =  im::set (nm, v, i))
				nm
				vl
			);
                end;

		number_map
                    =
                    #2 (fold_left ass_num (0, im::empty) (scc::topological_order' (make_graph fe')));

		fun sccnum x
                    =
                    the (im::get (number_map, x));

