package nbody_app {

    package v = sim::v;

    fun make_data (x, y, vx, vy, m, r, cs)
	=
	( (x, y),	# position
          (vx, vy),	# velocity
          m,		# mass
          r,		# radius
          cs		# "cs" was probably "color specification"
	);

    body_data
	=
	map
            make_data
