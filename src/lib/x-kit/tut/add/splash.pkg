				       xd::FOREGROUND  (xc::rgb8_from_int 1)
				     ];

		    fun mks pts
			=
			{   (bbox pts) ->  xg::BOX { col, row, wide, high };

			    del_pt = xg::POINT { col, row };

			    pts' =  map (fn p = xg::sub_pt (p, del_pt))
					pts;

			    pixmap =  xc::make_rw_pixmap  screen  (xg::SIZE { wide, high }, 1);

			    draww  =  xd::drawable_of_rw_pixmap  pixmap;

			    xd::clear_drawable draww;

			    xd::fill_polygon
