## simple-rpc.api

# Compiled by:
#     src/lib/std/stdlib.make6




# Generators for simple RPC protocols.


api Simple_Rpc {

    Mailop(X)
	=
	threadkit::Mailop(X);

    make_rcp
	:
	(X -> Y)
	->
	{ call:           X -> Y,
	  entry_mailop:  Mailop( Void )
	};

    make_rcp_in
	:
	((X, Z) -> Y)
	->
	{ call:           X -> Y,
	  entry_mailop:  Z -> Mailop( Void )
	};

    make_rcp_out
	:
        (X -> ((Y, Z)))
        ->
        { call:           X -> Y,
	  entry_mailop:  Mailop( Z )
	};

    make_rcp_in_out
	:
	((X, Z) -> (Y, W))
	->
	{ call:           X -> Y,
	  entry_mailop:  Z -> Mailop( W )
	};

};


