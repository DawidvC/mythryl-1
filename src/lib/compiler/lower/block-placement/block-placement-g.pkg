generic package block_placement_g (
    package control_flow_graph:  	Control_Flow_Graph;		# Control_Flow_Graph		is from   src/lib/compiler/lower/flowgraph/control-flow-graph.api
    package instruction_properties:     Instruction_Properties;		# Instruction_Properties	is from   src/lib/compiler/lower/instruction/instruction-properties.api
)

: (weak) Block_Placement						# Block_Placement		is from   src/lib/compiler/lower/block-placement/block-placement.api
{
    package control_flow_graph
        =
        control_flow_graph;

    package default_placement
        =
        default_block_placement_g (					# default_block_placement	is from   src/lib/compiler/lower/block-placement/default-block-placement-g.pkg
            control_flow_graph
        );

    package weighted_placement
        = 
        weighted_block_placement_g (					# weighted_block_placement_g	is from   src/lib/compiler/lower/block-placement/weighted-block-placement-g.pkg
	    package control_flow_graph = control_flow_graph; 
	    package instruction_properties = instruction_properties;
        );

    do_weighted_block_placement
        =
        low_code_control::make_bool (
	    "do_weighted_block_placement",
	    "TRUE to do weighted block placement"
        );

    fun block_placement (control_flow_graph as graph::GRAPH graph)
        =
	if *do_weighted_block_placement   weighted_placement::block_placement  control_flow_graph;
	else                               default_placement::block_placement  control_flow_graph;
        fi;
};


